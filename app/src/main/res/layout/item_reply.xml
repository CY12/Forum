<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@mipmap/head"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="8dp"
        android:textSize="13dp"
        android:textColor="#333333"
        android:text="姓名"
        />
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/tv_name"
        android:textSize="12dp"
        android:text="12/18 17:11 "
        android:textColor="#999999"
        />
    <TextView
        android:id="@+id/tv_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/tv_time"
        android:layout_marginTop="5dp"
        android:textSize="15dp"

        android:textColor="@color/text_them"
        android:text=""
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_img"
        android:layout_below="@+id/tv_reply"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_reply_reply"
        android:layout_below="@+id/rv_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:textSize="14dp"
        android:paddingTop="7dp"
        android:text="回复"
        android:textColor="#999999"

        />
    <View
        android:layout_below="@+id/tv_reply_reply"
        android:layout_marginTop="9dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#B3DDDDDD"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="5dp"
        />
</RelativeLayout>