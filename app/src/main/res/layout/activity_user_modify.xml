<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.UserModifyActivity"
    android:paddingLeft="20dp"
    android:paddingTop="30dp"
    android:paddingRight="20dp"
    >

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:src="@mipmap/head"
        />
    <TextView
        android:layout_below="@+id/iv_head"
        android:layout_marginTop="40dp"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:background="@drawable/stroke_10"
        />
    <EditText
        android:layout_below="@+id/iv_head"
        android:layout_marginTop="40dp"
        android:id="@+id/et_name"
        android:padding="10dp"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:textSize="16dp"
        android:hint="昵称"
        android:background="@null"
        />
    <TextView
        android:layout_below="@+id/iv_head"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:paddingLeft="20dp"
        android:gravity="center"
        android:layout_toRightOf="@+id/et_name"
        android:text="*昵称限7个字符"
        android:textSize="15dp"
        android:textColor="#2196F3"
        />


    <TextView
        android:layout_below="@+id/et_name"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/stroke_10"
        />
    <EditText
        android:id="@+id/et_sign"
        android:layout_below="@+id/et_name"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="10dp"
        android:background="@null"
        android:inputType="textMultiLine"
        android:hint="默认签名"
        android:textSize="16dp"
        />
    <TextView
        android:layout_below="@+id/et_sign"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="7dp"
        android:text="*签名限20个字符"
        android:textSize="15dp"
        android:textColor="#2196F3"
        />

    <TextView
        android:layout_below="@+id/et_sign"
        android:layout_marginTop="170dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_confirm"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19dp"
        android:text="提交修改"
        android:textColor="#fff"
        android:background="@drawable/shape_botton"
        />

</RelativeLayout>