<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_10"
    android:id="@+id/rv_message"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@mipmap/head"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="6dp"
        />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="8dp"
        android:textSize="13dp"
        android:textColor="#333333"
        android:text="姓名"
        />
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/tv_name"
        android:textSize="12dp"
        android:text="12/18 17:11 "
        android:textColor="#999999"
        />
    <ImageView
        android:id="@+id/iv_tip"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:src="@mipmap/red_point"
        android:padding="2dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        />

    <LinearLayout
        android:id="@+id/ll_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_time"
        android:layout_marginTop="5dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_reply"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hhh不是hhhh"
            android:textSize="16dp"
            android:textColor="#333333"
            />
        <TextView
            android:id="@+id/tv_reply_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:background="@drawable/shape_10"
            android:text="哈哈哈哈哈"
            android:textSize="14dp"
            android:textColor="@color/text_them_light"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/tv_post_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_reply"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:text="帖子的标题"
        android:textSize="12dp"
        android:textColor="#999999"
        />
    <LinearLayout
        android:id="@+id/ll_toReply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/ll_reply"
        android:paddingTop="5dp"
        android:paddingRight="@dimen/dp_10"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/reply_99"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回复"
            android:textSize="12dp"
            android:layout_marginLeft="8dp"
            android:textColor="#999999"
            />

    </LinearLayout>
    <View
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/ll_toReply"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#F5F5F5"
        />


</RelativeLayout>